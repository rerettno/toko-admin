<!DOCTYPE html>
<html>
<head>
    <title>Daftar Produk</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f2f2f2;
            padding: 20px;
        }
        h1 {
            text-align: center;
        }
        .container {
            width: 80%;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }
        table th, table td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        table th {
            background: #eee;
        }
        .top-menu {
            display: flex;
            justify-content: space-between;
        }
        .btn {
            padding: 8px 14px;
            background: #3498db;
            color: white;
            border-radius: 5px;
            text-decoration: none;
        }
        .btn:hover {
            background: #2980b9;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="top-menu">
        <h1>Daftar Produk</h1>
        <div>
            <a class="btn" href="/produk/tambah">+ Tambah Produk</a>
            <a class="btn" href="/pembelian">Lihat Pembelian</a>
        </div>
    </div>

    <table>
        <tr>
            <th>ID</th>
            <th>Nama Produk</th>
            <th>Harga</th>
            <th>Stok</th>
        </tr>

        <% produk.forEach(p => { %>
            <tr>
                <td><%= p.id %></td>
                <td><%= p.nama %></td>
                <td>Rp <%= p.harga.toLocaleString() %></td>
                <td><%= p.stok %></td>
            </tr>
        <% }) %>
    </table>
</div>

</body>
</html>
